<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BloodUpdate">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bu_pro"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bu_name"
        android:hint="নাম"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bu_number"
        android:hint="নাম্বার"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bu_thikana"
        android:hint="ঠিকানা"/>
    <Button
        android:onClick="updateBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bu_upbtn"
        android:text="আপডেট"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:onClick="deleteBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bu_dltbtn"
        android:text="ডিলেট"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"/>
</LinearLayout>